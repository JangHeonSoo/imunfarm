---
import { Image } from 'astro:assets'
import { getCategoryName, getCategoryTitleFromSlug, sluglify } from '@/utils'
import FormattedDate from '@/components/FormattedDate'
import ArrowUp from '@/components/icons/ArrowUp'

const {
	id,
	data: { title, description, pubDate, heroImage, category },
	readTime,
	slug,
	displayAsRows = false
} = Astro.props

const categorySlug = sluglify(getCategoryName(category).toLowerCase())
const categoryTitle = getCategoryTitleFromSlug(categorySlug)
---

<article class='bg-white dark:bg-gray-800 rounded-3xl overflow-hidden shadow-card transition-all duration-300 hover:-translate-y-2 hover:shadow-xl cursor-pointer group'>
	{heroImage && (
		<a href={`/${categorySlug}/${slug}/`} class='relative block h-60 overflow-hidden'>
			<Image
				src={heroImage}
				width={600}
				height={240}
				format='webp'
				class='w-full h-full object-cover transition-transform duration-300 group-hover:scale-105'
				alt={`img of ${title}`}
			/>
			<span class='absolute top-5 left-5 bg-primary text-white px-4 py-1.5 rounded-full text-sm font-semibold'>
				{categoryTitle}
			</span>
		</a>
	)}
	
	<div class='p-8'>
		<span class='block text-sm text-text-muted dark:text-gray-400 mb-2.5'>
			<FormattedDate date={pubDate} />
		</span>
		
		<a href={`/${categorySlug}/${slug}/`}>
			<h3 class='text-2xl font-heading font-semibold mb-4 text-text-main dark:text-white group-hover:text-primary transition-colors'>
				{title}
			</h3>
		</a>
		
		<p class='text-base text-text-muted dark:text-gray-300 mb-5 line-clamp-3'>
			{description}
		</p>
		
		<a 
			href={`/${categorySlug}/${slug}/`}
			class='inline-block text-primary dark:text-primary font-semibold hover:text-primary-dark transition-all hover:ml-1'
		>
			자세히 보기 →
		</a>
	</div>
</article>

<script>
	import { animate } from 'motion'

	const images = document.querySelectorAll('img')

	document.addEventListener('DOMContentLoaded', function () {
		const showAnimations = localStorage.getItem('animations') === 'true'

		if (showAnimations) {
			animate(
				'.effect',
				{
					opacity: [0, 1],
					clipPath: ['circle(0% at 0% 0%)', 'circle(100% at 50% 50%)']
				},
				{ duration: 2, easing: 'ease' }
			)
		} else {
			images.forEach((img) => {
				img.classList.remove('opacity-0')
			})
		}
	})
</script>
